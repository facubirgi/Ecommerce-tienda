# ============================================
# MEDUSA BACKEND - ENVIRONMENT CONFIGURATION
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env files with real credentials

# ============================================
# DATABASE
# ============================================
# PostgreSQL connection string
# Development: postgres://user:password@localhost:5432/medusa-v2
# Production: Use your hosted database URL (Neon, Supabase, RDS, etc.)
DATABASE_URL=
DB_NAME=medusa-v2

# ============================================
# REDIS (required for production)
# ============================================
# Development: redis://localhost:6379
# Production: Use your hosted Redis URL (Upstash, Redis Cloud, etc.)
REDIS_URL=redis://localhost:6379

# ============================================
# SECURITY SECRETS
# ============================================
# IMPORTANT: Generate secure random strings for production!
# Run: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=
COOKIE_SECRET=

# ============================================
# CORS CONFIGURATION
# ============================================
# Development URLs (comma-separated, no spaces)
# STORE_CORS=http://localhost:8000
# ADMIN_CORS=http://localhost:5173,http://localhost:9000
# AUTH_CORS=http://localhost:5173,http://localhost:9000

# Production: Replace with your actual domains
# STORE_CORS=https://your-store-domain.com
# ADMIN_CORS=https://your-admin-domain.com
# AUTH_CORS=https://your-admin-domain.com,https://your-store-domain.com
STORE_CORS=
ADMIN_CORS=
AUTH_CORS=

# ============================================
# APPLICATION URLs
# ============================================
# Development
# STORE_URL=http://localhost:8000
# BACKEND_URL=http://localhost:9000

# Production: Replace with your actual domains
STORE_URL=
BACKEND_URL=

