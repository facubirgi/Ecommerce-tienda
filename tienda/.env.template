# ============================================
# MEDUSA BACKEND - ENVIRONMENT CONFIGURATION
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env files with real credentials

# ============================================
# DATABASE
# ============================================
# PostgreSQL connection string
# Development: postgres://user:password@localhost:5432/medusa-v2
# Production: Use your hosted database URL (Neon, Supabase, RDS, etc.)
DATABASE_URL=
DB_NAME=medusa-v2

# ============================================
# REDIS (required for production)
# ============================================
# Development: redis://localhost:6379
# Production: Use your hosted Redis URL (Upstash, Redis Cloud, etc.)
REDIS_URL=redis://localhost:6379

# ============================================
# SECURITY SECRETS
# ============================================
# IMPORTANT: Generate secure random strings for production!
# Run: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=
COOKIE_SECRET=

# ============================================
# CORS CONFIGURATION
# ============================================
# Development URLs (comma-separated, no spaces)
# STORE_CORS=http://localhost:8000
# ADMIN_CORS=http://localhost:5173,http://localhost:9000
# AUTH_CORS=http://localhost:5173,http://localhost:9000

# Production: Replace with your actual domains
# STORE_CORS=https://your-store-domain.com
# ADMIN_CORS=https://your-admin-domain.com
# AUTH_CORS=https://your-admin-domain.com,https://your-store-domain.com
STORE_CORS=
ADMIN_CORS=
AUTH_CORS=

# ============================================
# APPLICATION URLs
# ============================================
# Development
# STORE_URL=http://localhost:8000
# BACKEND_URL=http://localhost:9000

# Production: Replace with your actual domains
STORE_URL=
BACKEND_URL=

# ============================================
# MERCADO PAGO CONFIGURATION
# ============================================
# Get your credentials from: https://www.mercadopago.com.ar/developers/panel/credentials
# Use TEST credentials for development, PRODUCTION credentials for live

# Access Token (keep secret, never expose to frontend)
MERCADOPAGO_ACCESS_TOKEN=

# Callback URLs - Must be publicly accessible in production
# Development (use ngrok or similar for local testing):
# MERCADOPAGO_BACK_URL_SUCCESS=http://localhost:8000/checkout/success
# MERCADOPAGO_BACK_URL_FAILURE=http://localhost:8000/checkout/failure
# MERCADOPAGO_BACK_URL_PENDING=http://localhost:8000/checkout/pending
# MERCADOPAGO_NOTIFICATION_URL=http://localhost:9000/webhooks/mercadopago

# Production:
# MERCADOPAGO_BACK_URL_SUCCESS=https://your-store-domain.com/checkout/success
# MERCADOPAGO_BACK_URL_FAILURE=https://your-store-domain.com/checkout/failure
# MERCADOPAGO_BACK_URL_PENDING=https://your-store-domain.com/checkout/pending
# MERCADOPAGO_NOTIFICATION_URL=https://your-backend-domain.com/webhooks/mercadopago
MERCADOPAGO_BACK_URL_SUCCESS=
MERCADOPAGO_BACK_URL_FAILURE=
MERCADOPAGO_BACK_URL_PENDING=
MERCADOPAGO_NOTIFICATION_URL=
