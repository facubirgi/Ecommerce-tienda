# ============================================
# STOREFRONT (Next.js) - ENVIRONMENT CONFIGURATION
# ============================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local files with real credentials

# ============================================
# MEDUSA BACKEND CONNECTION
# ============================================
# Development: http://localhost:9000
# Production: https://your-backend-domain.com
MEDUSA_BACKEND_URL=
NEXT_PUBLIC_MEDUSA_BACKEND_URL=

# ============================================
# STOREFRONT URL
# ============================================
# Development: http://localhost:8000
# Production: https://your-store-domain.com
NEXT_PUBLIC_BASE_URL=

# ============================================
# MEDUSA PUBLISHABLE KEY
# ============================================
# Get this from your Medusa admin dashboard
# This key is safe to expose (it's publishable)
NEXT_PUBLIC_MEDUSA_PUBLISHABLE_KEY=

# ============================================
# REGION CONFIGURATION
# ============================================
# Default region when user location cannot be determined
# Use ISO-2 lowercase format (e.g., ar, us, br, mx)
NEXT_PUBLIC_DEFAULT_REGION=ar

# ============================================
# SECURITY SECRETS
# ============================================
# Used for Next.js on-demand revalidation
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
REVALIDATE_SECRET=

# ============================================
# MERCADO PAGO (Frontend)
# ============================================
# Get your Public Key from: https://www.mercadopago.com.ar/developers/panel/credentials
# Use TEST public key for development, PRODUCTION public key for live
# This key is safe to expose (it's a public key)
NEXT_PUBLIC_MERCADOPAGO_PUBLIC_KEY=

# ============================================
# STRIPE (Optional)
# ============================================
# Only needed if using Stripe as payment provider
# Get from: https://dashboard.stripe.com/apikeys
NEXT_PUBLIC_STRIPE_KEY=

# ============================================
# MEDUSA PAYMENTS (Optional)
# ============================================
# Only needed if using Medusa Payments
NEXT_PUBLIC_MEDUSA_PAYMENTS_PUBLISHABLE_KEY=
NEXT_PUBLIC_MEDUSA_PAYMENTS_ACCOUNT_ID=

# ============================================
# MEDUSA CLOUD S3 (Optional)
# ============================================
# Only for Medusa Cloud users - enables image optimization
MEDUSA_CLOUD_S3_HOSTNAME=
MEDUSA_CLOUD_S3_PATHNAME=
